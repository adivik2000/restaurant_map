<h2>Login</h2>

<% form_for @user_session, :url => user_session_path do |f| %>

  <%= f.error_messages %>

  <div>
    <%= f.label :email %>:
    <%= f.text_field :email %>
  </div>

  <div>
    <%= f.label :password %>:
    <%= f.password_field :password %>
  </div>

  <div>
    <s><%= link_to "Forgot password", "#" -%></s> Don't forget your password!
  </div>

  <%= f.check_box :remember_me %><%= f.label :remember_me %><br />

  <%= f.submit "Login" %>
<% end -%>
